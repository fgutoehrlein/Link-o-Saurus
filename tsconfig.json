{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node", "chrome", "vitest", "@playwright/test"]
  },
  "include": [
    "extension/src",
    "scripts",
    "tests",
    "playwright.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "types"
  ],
  "exclude": ["dist", "node_modules"]
}
